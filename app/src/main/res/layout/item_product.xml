<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="product"
            type="com.samilaltin.adidas.assessment.network.data.ProductResponse" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/product_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/margin4"
        app:cardElevation="@dimen/margin4"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/margin16">

            <ImageView
                android:id="@+id/product_image"
                setImageCenterCrop="@{product.imgUrl}"
                android:layout_width="@dimen/margin64"
                android:layout_height="@dimen/margin64"
                android:layout_marginEnd="@dimen/margin16"
                android:contentDescription="@string/product_image"
                tools:src="@drawable/ic_noimage" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/product_name"
                    style="@style/ProductNameTextStyle"
                    visibleIf="@{product.name != null}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{product.name.trim()}"
                    tools:text="Product Name" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/product_desc"
                    style="@style/ProductDescTextStyle"
                    visibleIf="@{product.description != null}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{product.description.trim()}"
                    tools:text="Product Desc" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/product_price"
                    style="@style/ProductPriceTextStyle"
                    visibleIf="@{product.priceWithCurrency != null}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{product.priceWithCurrency.trim()}"
                    tools:text="Product Price" />

            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</layout>
